generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ValidSizes {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum ValidTypes {
  shirts
  pants
  hoodies
  hats
}

enum ValidGender {
  men
  women
  kid
  unisex
}


model Product {
  id          String      @id @default(uuid())
  title       String      @unique
  description String?
  price       Float       @default(0)
  stock       Int         @default(0)
  slug        String      @unique
  sizes       ValidSizes[]
  tags        String[]
  type        ValidTypes  @default(shirts)
  gender      ValidGender
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

